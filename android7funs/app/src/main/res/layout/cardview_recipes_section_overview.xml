<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/recipesSectionOverviewCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/card_margin"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <ImageView
            android:id="@+id/recipesSectionOverviewCardViewImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/recipesSectionOverviewCardViewTitle"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="contact detail"
            android:textColor="@android:color/black"
            android:textSize="17dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:id="@+id/recipesSectionOverviewCardViewCollect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collect"
                android:theme="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/recipesSectionOverviewCardViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/recipesSectionOverviewCardViewCollect"
                android:layout_toRightOf="@+id/recipesSectionOverviewCardViewCollect"
                android:text="Detail"
                android:theme="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:id="@+id/recipesSectionOverviewCardViewExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="V"
                android:theme="@style/Widget.AppCompat.Button.Borderless"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>